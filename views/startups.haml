.panel.panel-primary
  .panel-heading
    .row
      .col-md-6
        %h3.panel-title
          Random Selection of Startups
      .col-md-6
        .pull-right
          %a.td-n.brad-100p.bgc-silver.d-fx.fxai-c.fxjc-c.c-white.w-30px.h-30px.bs-1.fsz-20px{"data-icon" => "refresh", :title => "Refresh list", :href => "/startups"  }
  .panel-body
    - @startups.in_groups_of(3).each do |ary|
      .row
        - ary.each do |startup|
          .col-md-4
            = haml :"_startup_card", :locals => {:startup => startup}

:javascript
  $(document).ready(function(){
    $('.strtcard').click(function(){
      var url = window.location.protocol + "//" + window.location.hostname +
          ":" + window.location.port + "/startups/" + $(this).data("id");
      window.location = url;
    });
  });
